{
  "name": "bdd_connect",
  "version": "1.0.0",
  "description": "connect bdd ",
  "main": "server.js",
  "scripts": {
    "Install": "npm install",
    "clear": "rm -fr node_modules && rm package-lock.json && npm cache clear -f",
    "clearInstall": "npm run clear && npm run Install",
    "start": "nodemon server.js",
    "lint:fix": "eslint \"**/*.js\" --fix",
    "lint": "eslint \"**/*.js\"",
    "prettify": "prettier \"**/*.js\" --write",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "git-precommit-checks && lint-staged "
    }
  },
  "lint-staged": {
    "*.(js|html|css)": [
      "prettier --write",
      "npm run lint:fix",
      "git add"
    ]
  },
  "git-precommit-checks": {
    "rules": [
      {
        "filter": "\\.js$",
        "nonBlocking": "true",
        "message": "il y à des `console.log`",
        "regex": "console\\.log"
      },
      {
        "message": "il y à des conflie",
        "regex": "/^[<>|=]{4,}/m"
      },
      {
        "message": "il y à des DEV non terminer",
        "nonBlocking": "true",
        "regex": "(?:FIXME|TODO)"
      }
    ]
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./**/*.{js,jsx}"
    ]
  },
  "author": "Leonardo Da Fonseca Esteves",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "mysql": "^2.18.1",
    "winston": "^3.3.3",
    "dotenv": "^8.2.0",
    "express-basic-auth": "^1.2.0",
    "prettier": "^2.2.1"
  },
  "devDependencies": {
    "eslint": "^7.19.0",
    "eslint-config-google": "^0.14.0",
    "git-precommit-checks": "^3.0.6",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "nodemon": "^2.0.7"
  }
}
